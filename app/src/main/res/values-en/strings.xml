    <!-- Single Emotions Descriptions -->
    <!-- Joy Group -->
    <string name="emotion_detail_ecstasy_desc">You are experiencing intense rapture and overwhelming happiness.</string>
    <string name="emotion_detail_joy_desc">You feel happy, delighted, and naturally smiling.</string>
    <string name="emotion_detail_serenity_desc">Your mind is calm and peaceful like a waveless sea.</string>

    <!-- Trust Group -->
    <string name="emotion_detail_admiration_desc">You are deeply moved and respectful of someone\'s excellence.</string>
    <string name="emotion_detail_trust_desc">You rely on and believe in someone or a situation without doubt.</string>
    <string name="emotion_detail_acceptance_desc">You have an open mind to accept and acknowledge things as they are.</string>

    <!-- Fear Group -->
    <string name="emotion_detail_terror_desc">You are frozen and panicked by overwhelming fear.</string>
    <string name="emotion_detail_fear_desc">You feel threatened, anxious, and want to escape.</string>
    <string name="emotion_detail_apprehension_desc">You are worried and uneasy that something bad might happen.</string>

    <!-- Surprise Group -->
    <string name="emotion_detail_amazement_desc">You are stunned by something completely unexpected.</string>
    <string name="emotion_detail_surprise_desc">You are momentarily startled or taken aback by a sudden event.</string>
    <string name="emotion_detail_distraction_desc">Your attention is scattered and it\'s hard to focus.</string>

    <!-- Sadness Group -->
    <string name="emotion_detail_grief_desc">You are in deep sorrow that feels heartbreaking.</string>
    <string name="emotion_detail_sadness_desc">Your heart feels heavy, gloomy, and tearful.</string>
    <string name="emotion_detail_pensiveness_desc">You are lost in thought, feeling a hint of melancholy and loneliness.</string>

    <!-- Disgust Group -->
    <string name="emotion_detail_loathing_desc">You feel an unbearably strong aversion.</string>
    <string name="emotion_detail_disgust_desc">You find something unpleasant and repulsive.</string>
    <string name="emotion_detail_boredom_desc">You feel dull and bored due to a lack of stimulation.</string>

    <!-- Anger Group -->
    <string name="emotion_detail_rage_desc">You feel furious anger ready to explode.</string>
    <string name="emotion_detail_anger_desc">You are upset and offended by dissatisfaction or injustice.</string>
    <string name="emotion_detail_annoyance_desc">You feel slightly bothered and irritated by a situation or person.</string>

    <!-- Anticipation Group -->
    <string name="emotion_detail_vigilance_desc">You are alert and on guard against danger or opportunity.</string>
    <string name="emotion_detail_anticipation_desc">You are waiting with excitement for what is to come.</string>
    <string name="emotion_detail_interest_desc">You are curious and paying attention to an object or situation.</string>

    <!-- Complex Emotions (Dyads) -->
    <!-- Primary -->
    <string name="emotion_complex_love_title">Love</string>
    <string name="emotion_complex_love_desc">Joy and Trust combine to form warm and deep affection.</string>
    
    <string name="emotion_complex_submission_title">Submission</string>
    <string name="emotion_complex_submission_desc">Trust and Fear mix into acceptance or yielding to the inevitable.</string>
    
    <string name="emotion_complex_awe_title">Awe</string>
    <string name="emotion_complex_awe_desc">Fear and Surprise combine into a feeling towards something overwhelming or mysterious.</string>
    
    <string name="emotion_complex_disapproval_title">Disapproval</string>
    <string name="emotion_complex_disapproval_desc">Surprise and Sadness meet in dissatisfaction with an unexpected negative outcome.</string>
    
    <string name="emotion_complex_remorse_title">Remorse</string>
    <string name="emotion_complex_remorse_desc">Sadness and Disgust mix to create deep regret over past actions or oneself.</string>
    
    <string name="emotion_complex_contempt_title">Contempt</string>
    <string name="emotion_complex_contempt_desc">Disgust and Anger combine to look down on or strongly reject someone.</string>
    
    <string name="emotion_complex_aggressiveness_title">Aggressiveness</string>
    <string name="emotion_complex_aggressiveness_desc">Anger and Anticipation meet to drive forward or challenge forcefully.</string>
    
    <string name="emotion_complex_optimism_title">Optimism</string>
    <string name="emotion_complex_optimism_desc">Anticipation and Joy blend into positive hope that things will go well.</string>
    
    <!-- Secondary -->
    <string name="emotion_complex_guilt_title">Guilt</string>
    <string name="emotion_complex_guilt_desc">Discomfort where Joy is marred by Fear.</string>
    
    <string name="emotion_complex_curiosity_title">Curiosity</string>
    <string name="emotion_complex_curiosity_desc">A desire to explore new things with Trust and Surprise.</string>
    
    <string name="emotion_complex_despair_title">Despair</string>
    <string name="emotion_complex_despair_desc">Fear and Sadness meet, losing hope and falling into darkness.</string>
    
    <string name="emotion_complex_unbelief_title">Unbelief</string>
    <string name="emotion_complex_unbelief_desc">Surprise and Disgust mix to refuse acceptance of a situation.</string>
    
    <string name="emotion_complex_envy_title">Envy</string>
    <string name="emotion_complex_envy_desc">Sadness and Anger mix, suffering from lack compared to others\' happiness.</string>
    
    <string name="emotion_complex_cynicism_title">Cynicism</string>
    <string name="emotion_complex_cynicism_desc">Disgust and Anticipation mix to predict negative outcomes and mock them.</string>
    
    <string name="emotion_complex_pride_title">Pride</string>
    <string name="emotion_complex_pride_desc">Anger and Joy combine into strong confidence in one\'s achievements or worth.</string>
    
    <string name="emotion_complex_fatalism_title">Fatalism</string>
    <string name="emotion_complex_fatalism_desc">Anticipation and Trust mix to accept the future as predetermined.</string>
    
    <!-- Tertiary -->
    <string name="emotion_complex_delight_title">Delight</string>
    <string name="emotion_complex_delight_desc">Joy and Surprise meet in great happiness from the unexpected.</string>
    
    <string name="emotion_complex_sentimentality_title">Sentimentality</string>
    <string name="emotion_complex_sentimentality_desc">Trust and Sadness mix, immersing in past memories or connections.</string>
    
    <string name="emotion_complex_shame_title">Shame</string>
    <string name="emotion_complex_shame_desc">Fear and Disgust meet in strong embarrassment about oneself.</string>
    
    <string name="emotion_complex_outrage_title">Outrage</string>
    <string name="emotion_complex_outrage_desc">Surprise and Anger mix in strong reaction to something unexpected.</string>
    
    <string name="emotion_complex_pessimism_title">Pessimism</string>
    <string name="emotion_complex_pessimism_desc">Sadness and Anticipation mix to expect negative results beforehand.</string>
    
    <string name="emotion_complex_morbidness_title">Morbidness</string>
    <string name="emotion_complex_morbidness_desc">A complex psychology feeling strange joy from repulsive things.</string>
    
    <string name="emotion_complex_dominance_title">Dominance</string>
    <string name="emotion_complex_dominance_desc">Anger and Trust meet to believe in oneself and control others.</string>
    
    <string name="emotion_complex_anxiety_title">Anxiety</string>
    <string name="emotion_complex_anxiety_desc">Anticipation and Fear mix, nervous about the unknown future.</string>

