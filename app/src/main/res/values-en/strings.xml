    <!-- Complex Emotions (Opposite / Conflict) -->
    <string name="emotion_complex_bittersweetness_title">Bittersweetness</string>
    <string name="emotion_complex_bittersweetness_desc">Joy and Sadness mix, beautiful but leaving a sad lingering feeling.</string>

    <string name="emotion_complex_ambivalence_title">Ambivalence</string>
    <string name="emotion_complex_ambivalence_desc">Trust and Disgust coexist, a complex feeling of loving yet hating.</string>

    <string name="emotion_complex_frozenness_title">Frozenness</string>
    <string name="emotion_complex_frozenness_desc">Fear and Anger collide, stuck in tension unable to act.</string>

    <string name="emotion_complex_confusion_title">Confusion</string>
    <string name="emotion_complex_confusion_desc">Surprise and Anticipation mix, puzzled by unpredictable future.</string>


